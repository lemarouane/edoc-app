{% extends 'template.html.twig' %}

{% block title %}{{'Profile'|trans}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
     
     <!--start content-->

{{ form_start(ProfileUser , {'attr': {novalidate: 'novalidate' }}) }}
      <!--breadcrumb-->
      <div class="page-breadcrumb d-none d-sm-flex align-items-center">
        <div class="ps-3">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
              <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt text-white"></i></a>
              </li>
              <li class="breadcrumb-item active text-white" aria-current="page">{{'Profile'|trans}}</li>
            </ol>
          </nav>
        </div>
        
      </div>
      <!--end breadcrumb-->
    <div class="profile-cover bg-dark"></div>
      {% include "flaches.html.twig" %}
      <div class="row">
        <div class="col-12 col-lg-8">
          <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="mb-0">{{'Profile'|trans}}</h5>
                <hr>
                <div class="card shadow-none border">
                  <div class="card-body row g-3" >
                    <form class="row g-3">
                      <div class="col-6">
                          {{ form_row(ProfileUser.nom ,{ 'attr' : { 'class' : 'form-control' }}) }}
                      </div>
                      <div class="col-6">
                          {{ form_row(ProfileUser.prenom ,{ 'attr' : { 'class' : 'form-control' }}) }}
                      </div>
                      <div class="col-6">
                          {{ form_row(ProfileUser.phone ,{ 'attr' : { 'class' : 'form-control' }}) }}
                      </div>
                      <div class="col-6">
                          {{ form_row(ProfileUser.locale ,{ 'attr' : { 'class' : 'form-select' }}) }}
                      </div>
                    </form>
                  </div>
                </div>
               
                <div class="text-start" >
                  <button type="submit" class="btn btn-success px-4">{{'save'|trans}}</button> <a style="float:right;" class="btn btn-primary px-4" href="{{ path('app_dashboard') }}">{{'back'|trans}}</a>
                </div>
                
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-4">
          <div class="card shadow-sm border-0 overflow-hidden">
            <div class="card-body">
               <div class="profile-avatar text-center image-upload" style='.image-upload>input {display: none;}'>
                <label for="profile_etudiants_image_file">
                  <img id='file' style='cursor: pointer' src="{{ asset( app.user.image.getwebpath)}}" class="rounded-circle shadow" width="120" height="120" alt="">
                </label><br>
                {{ form_widget(ProfileUser.image.file,{'attr': {'style':'visibility: hidden;','accept':'image/*','onchange': 'document.getElementById("file").src = window.URL.createObjectURL(this.files[0])'}}) }}
                </div>
                <div class="form-group">
                                
                                  
                              </div>
                <div class="d-flex align-items-center justify-content-around mt-5 gap-3">
                    <div class="text-center">
                      <h4 class="mb-0"></h4>
                      <p class="mb-0 text-secondary"></p>
                    </div>

                    <div class="text-center">
                      <h4 class="mb-0"></h4>
                      <p class="mb-0 text-secondary"></p>
                    </div>
                </div>
                <div class="text-center mt-4">
                  <h4 class="mb-1">{{ Profile.nom }} {{ Profile.prenom }} </h4>
                  <p class="mb-0 text-secondary">{{ Profile.email }}</p>
                  <div class="mt-4"></div>
                  <h6 class="mb-1"></h6>
                  <p class="mb-0 text-secondary"></p>
                </div>
            </div>
       
          </div>
        </div>
    </div><!--end row-->

 <!--end page main-->
{{ form_row(ProfileUser._token) }}
{{ form_end(ProfileUser , {'render_rest': false}) }}
{% endblock %}

     
     
     
     
     
     
     
     
     
     
     