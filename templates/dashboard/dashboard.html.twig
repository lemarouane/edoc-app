{% extends 'template.html.twig' %}
{% block body %}
            

            <!--end breadcrumb-->

            {% include "flaches.html.twig" %}
          <div class="card border shadow-none">
             <div class="card-header py-3">
                  <div class="row align-items-center g-3">
                    <div class="col-12 col-lg-6">
                      <h5 class="mb-0">{{ etudiant.LIB_NOM_PAT_IND }} {{ etudiant.LIB_PR1_IND}}</h5>
                    </div>
                    <div class="col-12 col-lg-6 text-md-end">
                      
                      
                    </div>
                  </div>
             </div>
             <div class="card-header py-2 bg-light">
               <div class="row row-cols-1 row-cols-lg-4">
                 <div class="col">
                    <div class="">

                      <img id='file' src="{{ asset( app.user.image.getwebpath)}}" class="rounded-circle shadow" width="180" height="180" alt="">
                            
                    </div>
                  </div>
                 <div class="col">
                  <div class="">
                    
                    <address class="m-t-5 m-b-5">
                                        <strong>
                                        <p class="mb-1">{{ etudiant.LIB_NOM_PAT_IND }} {{ etudiant.LIB_PR1_IND}}</p></strong>
                                        <p class="mb-1">{{'cin'|trans}} : {{ etudiant.CIN_IND}}</p>
                                        <p class="mb-1">{{'tel'|trans}} : {{ etudiant.NUM_TEL}}</p>
                                        <p class="mb-1">{{'adresse'|trans}} : {{ etudiant.LIB_AD3}}</p>
                                        <p class="mb-1">&nbsp;&nbsp;</p> 
                                    </address>
                   </div>
                 </div>
                 <div class="col">
                  <div class="">
                    <address class="m-t-5 m-b-5">
                        <strong>{{'info_perso'|trans}}</strong><br>
                       <div class="d-flex align-items-center mb-0">
                                  <div>
                                    <p class="mb-0">{{'nom_prenom'|trans}}</p>
                                  </div>
                                  <div class="ms-auto info">
                                    <p class="mb-0">{{ etudiant.LIB_NOM_PAT_IND }}, {{ etudiant.LIB_PR1_IND}}</p>
                                </div>
                              </div>
                              <div class="d-flex align-items-center mb-0">
                                <div>
                                  <p class="mb-0"> {{'nom_prenom_ar'|trans}} </p>
                                </div>
                                <div class="ms-auto">
                                  <p class="mb-0">{{ etudiant.LIB_NOM_IND_ARB }} &nbsp;&nbsp; {{ etudiant.LIB_PRN_IND_ARB}}</p>
                                </div>
                              </div>
                              <div class="d-flex align-items-center mb-0">
                                <div>
                                  <p class="mb-0">{{'lieu_naiss'|trans}} </p>
                                </div>
                                <div class="ms-auto">
                                  <P class="mb-0">{{ etudiant.LIB_VIL_NAI_ETU }} &nbsp;&nbsp; {{ etudiant.LIB_VIL_NAI_ETU_ARB }}</P>
                                </div>
                              </div>
                              <div class="d-flex align-items-center mb-0">
                                  <div>
                                    <p class="mb-0">{{'code_massar'|trans}}  </p>
                                  </div>
                                  <div class="ms-auto">
                                    <p class="mb-0"> {{ etudiant.COD_NNE_IND }}</p>
                                </div>
                              </div>
                              <div class="d-flex align-items-center mb-0">
                                  <div>
                                    <p class="mb-0"> {{'date_naiss'|trans}} </p>
                                  </div>
                                  <div class="ms-auto">
                                    <p class="mb-0"> {{etudiant.DATE_NAI_IND}}</p>
                                </div>
                              </div>
                    </address>
                   </div>
                </div>
                <div class="col">
                  <div class="">
                    <div class=""><b> {{'info_admin'|trans}}</b></div>
                    <div class="invoice-detail">
                    </div>
                    <div class="d-flex align-items-center mb-0">
                      <div>
                        <p class="mb-0">{{'administrative'|trans}}</p>
                      </div>
                      <div class="ms-auto info">
                        <p class="mb-0">{{ ins_Adm_E[0].LIB_ANU}}</p>
                      </div>
                    </div>
                              <div class="d-flex align-items-center mb-0">
                                <div>
                                  <p class="mb-0">{{'pedagogique'|trans}}</p>
                                </div>
                                <div class="ms-auto">
                                  <p class="mb-0">{{ ins_Peda_E[0].LIB_ANU}}</p>
                                </div>
                              </div>
                              <div class="d-flex align-items-center mb-0">
                                <div>
                                  <p class="mb-0">{{'etape'|trans}}</p>
                                </div>
                                <div class="ms-auto">
                                  <P class="mb-0">{{ ins_Peda_E[0].COD_ETP}}</P>
                                </div>
                              </div>
                              <div class="d-flex align-items-center mb-0">
                                  <div>
                                    <p class="mb-0">{{'code_apogee'|trans}} </p>
                                  </div>
                                  <div class="ms-auto">
                                    <p class="mb-0">  {{ etudiant.COD_ETU }}</p>
                                </div>
                              </div>
                              <div class="d-flex align-items-center mb-0">
                                  <div>
                                    <p class="mb-0">{{'groupe'|trans}} </p>
                                  </div>
                                  <div class="ms-auto">
                                    <p class="mb-0"> {{ groupe}}</p>
                                </div>
                              </div>
                    </div>	           
                  </div>
                </div>
               </div>
             </div>
             <div class="row">
              <div class="col col-lg-12 mx-auto">    
                <div class="card radius-10">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-invoice table-striped">
                        <thead>
                            <tr>
                              <th width="20%">{{'etape'|trans}}</th>
                              <th class="text-center" width="20%">{{'annee_univ'|trans}}</th>
                              <th class="text-center" width="20%">{{'date_insc'|trans}}</th>
                              <th class="text-center" width="20%">{{'etat_insc'|trans}}</th>
                              <th class="text-right" width="20%">{{'nb_inscription'|trans}}</th>
                            </tr>
                        </thead>
                        <tbody>
                              {% for ins in ins_Adm_E %}
                                  <tr>
                                      <td>
                                          {{ins.COD_ETP}}
                                      </td>
                                      <td class="text-center">{{ins.LIB_ANU}}</td>
                                      <td class="text-center">{{ins.DAT_CRE_IAE}}</td>
                                      <td class="text-center">{{ins.ETA_IAE}}</td>
                                      <td class="text-right">{{ins.NBR_INS_ETP}}</td>
                                  </tr>
                              {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  </div>

                  <div class="card-footer py-3">
                      <p class="text-center mb-2">
                        CONTACT
                      </p>
                      <p class="text-center d-flex align-items-center gap-3 justify-content-center mb-0">
                        <span class=""><i class="bi bi-globe"></i> www.ensat.ac.ma</span>
                        <span class=""><i class="bi bi-envelope-fill"></i> gcvre@uae.ac.ma</span>
                      </p>
                  </div>
           </div>
          </div>
        </div>
            
    {% endblock %}
    
    


