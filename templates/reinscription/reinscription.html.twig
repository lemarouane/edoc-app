{% extends "template.html.twig" %}

{% block title %}{{'reinsc'|trans}}{% endblock %}

{% block body %}
 
 <h6 class="mb-0 text-uppercase">{{'reinsc'|trans}}</h6>
<hr/>

            <!--end breadcrumb-->
            {{ form_start(form) }}
              <div class="row">
                 <div class="col-lg-12 mx-auto">
                  <div class="card">
  
                    <div class="card-body">
                       <div class="row g-3">
						<div class="row invoice-info">
							<div class="col invoice-col">
								<address>
									<p><br><br>
										{{'msg_reinscription1'|trans}}<br>
										{{'msg_reinscription2'|trans}}<br>
										{{'msg_reinscription3'|trans}}<br>
									</p>
								</address>
							</div>
						</div>
                        <div class="col-12 col-lg-8 ">
                            <div class="card shadow-none bg-light border ">
                              <div class="card-body ">
							  
                                  <div class="row g-3 ">
                                        <div class="card-header py-2 bg-transparent">
                                          <h6 class="mb-0"> {{'reinsc'|trans}}</h6> 
                                        </div>
                                        <div class="row g-3 ">
										
                                          <div class="col">
                                            {{form_row( form.phone , {'attr': {'name':'N° Téléphone','class':'form-control'}} )}}
                                          </div>
                                        </div>
                                        <div class="text-start">
                                            <a class="btn btn btn-primary px-4" href="{{ app.request.headers.get('referer') }}">  {{'back'|trans}} </a>
                                            <button type='submit' class="btn btn-success px-4">{{'save'|trans}}</button>
                                        </div>

                                  </div><!--end row-->
                     
                              </div>
                            </div>  
                        </div>
                        <div class="col-12 col-lg-4">
                          <div class="card shadow-none bg-light border">
                            <div class="card-body">
                                <div class="profile-avatar text-center image-upload" style='.image-upload>input {display: none;}'>
									<label for="profile_image_file">
									<img id='file' style='cursor: pointer' src="{{ asset( app.user.image.getwebpath)}}" class="rounded-circle shadow" width="120" height="120" alt="">
									</label><br>
									{{ form_widget(form.image.file,{'attr': {'style':'visibility: hidden;','accept':'image/*','onchange': 'document.getElementById("file").src = window.URL.createObjectURL(this.files[0])'}}) }}
								</div>
                                <div class="form-group">
                                                
                                    <div class="text-center mt-4">
                                        <h4 class="mb-1"> </h4>
                                        <p class="mb-0 text-secondary">{{'uploader_photo'|trans}}</p>             
                                    </div>
                                </div>
                            </div>
                          </div>
                        </div><!--end row-->

            {{ form_row(form._token) }}
            {{ form_end(form , {'render_rest': false}) }}

                     
                     </div>
					 
                    </div>
					
                 </div>
				 <div class="card">
				 	<div class="card-body">
                       <div class="row g-3">
				 			<div class="table-responsive">
								<table id="example" class="table table-striped table-bordered"  style="text-align:center !important ;">
									<thead>
									<tr>
										<th style="text-align:center !important ; ">{{'code_apogee'|trans}}</th>
										<th style="text-align:center !important ; ">{{'enc_etape'|trans}}</th>
										<th style="text-align:center !important ; ">{{'annee_univ'|trans}}</th>
										<th style="text-align:center !important ; ">{{'date_demande'|trans}}</th>
										<th style="text-align:center !important ; ">{{'nv_etape'|trans}}</th>
										<th style="text-align:center !important ; ">{{'annee_univ'|trans}}</th>
										<th style="text-align:center !important ; ">{{'statut'|trans}}</th>
										<th style="text-align:center !important ; ">{{'resultat'|trans}}</th>
										<th style="text-align:center !important ; ">{{'motif_refus'|trans}}</th>
									</tr>
									</thead>
									<tbody>
										{% for re in reinscriptions %}
											<tr>
												<td>{{re.idUser.code}}</td>
												<td>{{ re.etapeAnc}}</td>
												<td>{{ re.annUnivAnc}}</td>
												<td>{{ re.dateDemande ? re.dateDemande|date('d/m/Y') : '' }}</td>
												<td>{{ re.etapeNouv}}</td>
												<td>{{ re.annNouv}}</td>
												<td>{{ re.statut}}</td>
												<td>{{ re.resultat}}</td>
												<td>{{ re.motif}}</td>  
											</tr>
										{% endfor %}                        
									</tbody>
								</table>
                        	</div>
						</div>
					</div>
				</div>
            </div><!--end row-->


{% endblock %}

